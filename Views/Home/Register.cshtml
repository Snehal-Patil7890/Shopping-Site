
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<center>
    <br />
    <h1>Register</h1>
    <br />
    <form action="/home/register" method="post" enctype="multipart/form-data">
        <table>
            <tr>
                <td><label for="Name">Name: </label></td>
                <td><input type="text" id="Name" name="Name" placeholder="Enter Name" /></td>
            </tr>
            <tr>
                <td><label for="UserName">UserName: </label></td>
                <td><input type="text" id="UserName" name="UserName" placeholder="Set UserName" /></td>
            </tr>
            <tr>
                <td><label for="Password">Password: </label></td>
                <td><input type="password" id="Password" name="Password" placeholder="Set Password" /></td>
            </tr>
        </table>
        <br />
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</center>
@if (ViewBag.msg1 != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("Invalid Username");
        };
    </script>
}



